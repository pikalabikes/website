  <Header booking />
  <main>
    <Intro />
    {
      sections.map(
        ({ frontmatter: { id, title, image, color, side }, Content }) => (
          <Section
            id={id}
            title={title}
            image={image}
            color={color}
            side={side}
          >
            <Content />
          </Section>
        ),
      )
    }
  </main>
</Layout>
