---
const { value, label } = Astro.props;
---
<div class="stat">
  <div class="value">{value}</div>
  <div class="label">{label}</div>
</div>

<style lang="scss">
@import '../../styles/breakpoints';

.value {
  font-family: Quicksand;
  font-size: 64px;
  font-weight: bold;
  letter-spacing: -2px;
  line-height: 1;
}

.label {
  font-size: 20px;

  @include b-desktop {
    font-size: 24px;
  }
}
</style>
