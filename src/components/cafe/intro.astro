---
import Section from '../section.astro';
import Button from '../button.astro';

import { frontmatter as config } from '../../../admin/pages/cafe/cafe.mdx';
---
<Section id="intro" image={config['hero_image']} color="marble" side="left">
  <h1>Pikala Caf√©</h1>
  <h3 class="tagline">
    {config['intro_text']}
  </h3>
  <nav class="nav">
    <ul class="nav-list">
      <li class="nav-item">
        <Button
          as="a"
          variant="outline"
          size="l"
          href={`${import.meta.env.BASE_URL}/${config['menu_link']}`}
          target="_blank"
          rel="noopener"
        >
          Our menu
        </Button>
      </li>
      <li class="nav-item">
        <Button
          as="a"
          variant="outline"
          size="l"
          href='#about'
        >
          Learn more
        </Button>
      </li>
      <li class="nav-item">
        <Button
          as="a"
          variant="outline"
          size="l"
          href="#contact"
        >
          Contact & Reservations
        </Button>
      </li>
    </ul>
  </nav>
</Section>

<style lang="scss">
@import '../../styles/breakpoints';

.tagline {
  color: var(--color-mortar);

  @include b-desktop {
    margin-top: 1rem;
  }
}

.nav {
  margin-top: 1rem;

  @include b-desktop {
    margin-top: 2rem;
  }
}

.nav-list {
  list-style-type: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;

  @include b-desktop {
    flex-direction: column;
    gap: 1rem;
  }
}
</style>
