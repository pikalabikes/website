---
import { Image } from 'astro:assets';

import Button from '../button.astro';

const { title, price, images } = Astro.props;

const importImage = async (name) => (await import(`../../../admin/images/${name}.jpg`)).default;

const imageNames = images || [];
const imageSrcs = await Promise.all(imageNames.map(importImage));
---
<div class="booking-option">
  <h2 class="title">
    <span class="text">{title}</span>
  </h2>
  <div class="gallery">
    <div class="gallery-images">
    {
      imageSrcs.map((src, index) => (
        <Image
          class="image"
          src={src}
          alt={title}
          aria-hidden="true"
          height="500"
          style={`--list-item-index: ${index};`}
        />
      ))
    }
    </div>
  </div>
  <div class="content">
    <slot />
  </div>
  <div class="action">
    <p class="price">
      <span class="price-value">{price}</span>
    </p>
    <Button
      as="a"
      class="book"
      variant="clementine"
    >
      Book
    </Button>
  </div>
</div>

<style lang="scss">
@import '../../styles/breakpoints';

.booking-option {
  background: var(--color-white);
  max-width: 100vw;
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.content {
  max-width: 900px;
}

.title {
  margin: 0.5rem 0 0;
  display: flex;
  align-items: start;
  flex-direction: column;
  gap: 0.5rem;

  @include b-desktop {
    align-items: center;
    flex-direction: row;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  &::before,
  &::after {
    content: '';
    display: block;
    background: var(--accent-color);
    height: 4px;
    border-radius: 2px;
  }

  &::before {
    width: 2rem;

    @include b-desktop {
      width: 4rem;
    }
  }

  &::after {
    flex-grow: 1;
  }
}

.gallery {
  overflow-x: scroll;
  width: calc(100% + 2rem);
  margin: 0.5rem -1rem 0.5rem;
  scroll-snap-type: x mandatory;

  @include b-desktop {
    margin: 1rem 0 0.5rem;
  }
}

.gallery-images {
  display: flex;
  position: relative;
  width: max-content;
  gap: 1rem;
  height: 30vh;

  @include b-desktop {
    height: 50vh;
    padding-right: 10rem;
  }
}

.image {
  animation: fade-in 300ms both;
  animation-delay: calc(var(--list-item-index) * 100ms);
  scroll-snap-align: start;
  display: block;
  height: 100%;
  width: auto;
}

.content {
  animation: fade-in 300ms 100ms both;
  background-color: inherit;
  padding: 1rem 0 0;
  flex-grow: 1;
  position: relative;
  z-index: 1;

  @include b-desktop {
    font-size: 1.5rem;
    padding: 1.5rem 0 0;
  }
}

.action {
  border: solid 2px var(--color-azure);
  border-radius: 2rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  width: fit-content;
  padding: 0.5rem 0.5rem 0.5rem 1rem;
  margin: 0 0 1rem;
  color: var(--color-azure);

  @include b-desktop {
    padding: 0.5rem 0.5rem 0.5rem 1.5rem;
    margin: 0 0 2rem;
  }
}

.price {
  margin: 0;

  @include b-desktop {
    font-size: 1.25rem;
  }
}

.price-value {
  font-weight: bold;
}
</style>
