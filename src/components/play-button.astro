---
const { class: classes, ...attrs } = Astro.props;
---
<button {...attrs} class={`${classes} play-button`} aria-label="Play">
  <svg class="icon" width="60" height="60" viewBox="0 0 48 56" xmlns="http://www.w3.org/2000/svg">
    <path d="M48 28L-2.61013e-06 55.7128L-1.87399e-07 0.287185L48 28Z" fill="currentColor"/>
  </svg>
</button>

<style lang="scss">
.play-button {
  height: 8rem;
  width: 8rem;
  background: var(--color-marble);
  color: var(--color-clementine);
  border: solid 2px var(--color-clementine);
  position: relative;
  border-radius: 8rem;
  transition: background-color 100ms, color 100ms, border-color 100ms;
  cursor: pointer;

  &:hover {
    background: var(--color-clementine);
    color: var(--color-white);
    border: solid 2px var(--color-clementine);
  }
}

.icon {
  position: relative;
  left: 8px;
}
</style>
